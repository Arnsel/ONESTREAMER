      <div class="scrolling-wrapper">
          <% @movies.each_with_index do |movie, index| %>
            <% active = index == 0 ? "active" : "" %>
              <% if movie.platform == "Netflix" %>
                    <a href='<%= movie_path(movie)%>' class="movie-card">
                      <img src="<%= movie.image_url %>" alt="img">
                    </a>
              <% end %>
            <% end %>

<div class="container">

  <% if @movies.platforms.name == "Netflix" %>
    <div class="carousel">
      <% @movies.each do |movie| %>
        <div class="movie-card">
          <%= movie.name %>
          <%= movie.imdb_rating %>
          <%= movie.image_url %>
        </div>
      <% end %>
    </div>
  <% end %>


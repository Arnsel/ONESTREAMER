<div class="container_show" data-controller="share" data-share-url-value="<%=movie_url(@movie)%>">
  <div class="show_card">
    <div class="image_container">

      <div class="watch_now">
        <div class="circle">
          <%= link_to "", @movie.video_url, target: :_blank, class: "fa-solid fa-play"%>
        </div>
      </div>

      <img src="<%= @movie.image_url %>">

      <div class="show_title">
        <div class="name">
          <h3>
            <%= content_tag(:h, @movie.name, data: {
              share_target: "name"
            }) %>
          </h3>
        </div>


        <div class="favourites">
          <%= link_to "", movie_favourite_movies_path(@movie), data: { "turbo-method": :post }, class: "fa-solid fa-heart", style: "text-decoration: none"%>
        </div>

        <div class="share">
          <%= link_to "", "", class: "fa-solid fa-share", style: "text-decoration: none", data: {
            action: "click->share#share"
          }%>
          <%= content_tag(:div, "", class:"result", data: {
            share_target: "result"
          }) %>
        </div>
      </div>
    </div>

    <div class="text_container">
      <div class="description">
        <h6>
        <%= content_tag(:h, @movie.description, data: {
          share_target: "description"
        }) %>
        </h6>
      </div>

      <div class="movie_info">
        <div>
          <h6><i class="fa-brands fa-imdb"></i><%= @movie.imdb_rating %></h6>
        </div>
          <h6><%= @movie.release_date %></h6>
      </div>
    </div>
  </div>
</div>
